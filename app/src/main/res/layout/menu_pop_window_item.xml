<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_item_height"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="@dimen/normal_item_height"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/basic_dimen_12"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/basic_dimen_12"
            android:text="this is menu item"
            android:textColor="@color/color_text_dark_black"
            android:textSize="@dimen/text_medium_size" />
    </LinearLayout>

    <View
        android:id="@+id/item_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/basic_dimen_12"
        android:layout_weight="1"
        android:background="@color/color_line_gray" />

</LinearLayout>